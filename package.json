{
  "name": "craftd",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "deploy": "npm run build && fly deploy --app craftd",
    "dev": "react-router dev",
    "dev:debug": "node --inspect-brk ./node_modules/.bin/react-router dev",
    "lint": "biome check --fix --reporter=github",
    "preview": "npm run build && vite preview",
    "start": "react-router-serve ./build/server/index.js",
    "test": "vitest run --passWithNoTests",
    "test:ui": "vitest run --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "react-router typegen && tsc -b",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:inject-jobs": "bun run scripts/inject-job-applications.ts"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.19",
    "@ai-sdk/openai": "^1.3.22",
    "@google/generative-ai": "^0.24.1",
    "@playwright/test": "^1.52.0",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.0",
    "@tanstack/react-query": "^5.80.6",
    "ai": "^4.3.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "isbot": "^5.1.27",
    "lucide-react": "^0.513.0",
    "next-themes": "^0.4.6",
    "pdf2json": "^3.1.6",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "react-image-crop": "^11.0.10",
    "react-router": "^7.5.3",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vite-plugin": "^1.0.12",
    "@react-router/dev": "^7.5.3",
    "@tailwindcss/vite": "^4.1.8",
    "@tanstack/react-query-devtools": "^5.80.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-image-crop": "^8.1.6",
    "@vitest/coverage-v8": "^3.2.2",
    "drizzle-kit": "^0.31.1",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.1.8",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2"
  }
}
